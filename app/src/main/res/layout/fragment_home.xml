<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:liftOnScroll="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ThemeOverlay.AppCompat.Light"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:cursorVisible="true"
                android:drawableStart="@drawable/ic_search"
                android:ems="10"
                android:hint="Cari di Tokopedia"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textSize="12sp" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="179dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvGridMenuTitle1"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="14dp"
                        android:src="@drawable/ic_official_selected" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Official\nStore"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvGridMenuTitle2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="11dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_view_more" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Lihat Semua"
                        android:textAlignment="center"
                        android:textSize="10.5sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvGridMenuTitle3"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/ic_daily_needs" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Kebutuhan Harian"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvGridMenuTitle4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="15dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_electronic" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Elektronik"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvGridMenuTitle5"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="14dp"
                        android:src="@drawable/ic_topup" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Top Up &amp; Tagihan"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvGridMenuTitle6"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="14dp"
                        android:src="@drawable/ic_travel" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Travel &amp; Entertainment"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvGridMenuTitle7"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="11dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_finance" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Keuangan"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvGridMenuTitle8"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="14dp"
                        android:src="@drawable/ic_smartphone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Handphone &amp; Tablet"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvGridMenuTitle9"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="14dp"
                        android:src="@drawable/ic_party_tools" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Perlengkapan Pesta"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvGridMenuTitle10"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="14dp"
                        android:src="@drawable/ic_office" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Ofiice &amp; Stationery"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:background="@color/black"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pager_slider">

        <HorizontalScrollView
            android:id="@+id/hzScrollView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvMenuTitle1"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="14dp"
                        android:src="@drawable/ic_peduli_lindungi" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Peduli\nLindungi"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvMenuTitle2"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="14dp"
                        android:src="@drawable/ic_bazzar" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Bazar Hari \nIni"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvMenuTitle3"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/ic_live_shop" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Live Shopping"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvMenuTitle4"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="14dp"
                        android:src="@drawable/ic_toped_seru" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Tokopedia Seru"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvMenuTitle5"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="14dp"
                        android:src="@drawable/ic_bangga_local" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Bangga \nLokal"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvMenuTitle6"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="14dp"
                        android:src="@drawable/ic_cod" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="52dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Bayar di Tempat"
                        android:textAlignment="center"
                        android:textSize="11sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>